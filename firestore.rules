rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles from custom claims
    function isSuperAdmin() {
      return request.auth.token.role == 'superAdmin';
    }

    function isAdmin() {
      return request.auth.token.role == 'admin' || isSuperAdmin();
    }

    // Locations and Tags can be read by anyone
    match /locations/{locationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /tags/{tagId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pending locations can be created by logged-in users, but only read/deleted by admins
    match /pending_locations/{pendingId} {
      allow read, delete: if isAdmin();
      allow create: if request.auth != null;
      allow update: if false; // Nobody can update a pending request
    }

    // Reports can be created by logged-in users, but only read/updated by admins
    match /reports/{reportId} {
      allow read, update: if isAdmin();
      allow create: if request.auth != null;
    }

    // Admins collection can be read by any admin, but only written to by super admins.
    match /admins/{userId} {
      allow read: if isAdmin();
      allow write: if isSuperAdmin();
    }

    // Users collection: users can read/write their own profile, admins can read all profiles
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Nobody can delete user profiles
    }
  }
}