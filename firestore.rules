rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin based on custom claims
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Locations and Tags can be read by anyone
    match /locations/{locationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /tags/{tagId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pending locations can be created by logged-in users, but only read/deleted by admins
    match /pending_locations/{pendingId} {
      allow read, delete: if isAdmin();
      allow create: if request.auth != null;
      allow update: if false; // Nobody can update a pending request
    }

    // Reports can be created by logged-in users, but only read/updated by admins
    match /reports/{reportId} {
      allow read, update: if isAdmin();
      allow create: if request.auth != null;
    }

    // Admins collection is managed by backend functions. No client-side writes are allowed.
    // Admins can read the list if needed.
    match /admins/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}